<style>
  body {
    font-family: "Lato", sans-serif;
  }
  
  .sidenav {
  height: calc(100% - 50px); /* Adjust the height to reach the bottom of the page */
  width: 100px; /* Set the initial width to the width of the icons */
  position: fixed;
  z-index: 1;
  top: 80px; /* Position the sidebar just below the top bar */
  left: 0;
  background-color: #545454;
  overflow-x: hidden;
  transition: 0.5s;
  padding-top: 10px; /* Adjust the padding-top if necessary */
}
  
  .sidenav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #818181;
    display: block;
    transition: 0.3s;
  }
  
  .sidenav a:hover {
    color: #f1f1f1;
  }
  
  .sidenav .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
  }

  
  @media screen and (max-height: 450px) {
    .sidenav {padding-top: 15px;}
    .sidenav a {font-size: 18px;}
  }

  .dashboard-icon {
  margin: 0rem 1rem 1.3rem 0rem;
  width: 2rem;
  height: 2rem;
  object-fit: contain;
  vertical-align: top;
  flex-shrink: 0;
}

.item-catalog-icon {
  margin: 0rem 1rem 1.3rem 0rem;
  width: 2rem;
  height: 2rem;
  object-fit: contain;
  vertical-align: top;
