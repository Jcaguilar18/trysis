}

.managestock-icon {
  margin: 0rem 1rem 1.3rem 0rem;
  width: 2rem;
  height: 2rem;
  object-fit: contain;
  vertical-align: top;
  flex-shrink: 0;
}

.generate-report-icon {
  margin: 0rem 1rem 1.3rem 0rem;
  width: 2rem;
  height: 2rem;
  object-fit: contain;
  vertical-align: top;
  flex-shrink: 0;
}

.generate-report-icon {
  margin: 0rem 1rem 1.3rem 0rem;
  width: 2rem;
  height: 2rem;
  object-fit: contain;
  vertical-align: top;
  flex-shrink: 0;
}

 .logs-icon {
