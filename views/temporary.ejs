<div class="users-table">
    <table>
        <thead>
            <tr>
                <th class="center-text">User ID</th>
                <th class="center-text">Username</th>
                <th class="center-text">Password</th>
                <th class="center-text">Role</th>
                <th class="center-text">Status</th>
                <th class="center-text">Edit</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td class="center-text"><%= user.userid %></td>
                    <td class="center-text"><%= user.username %></td>
                    <td class="center-text"><%= '*'.repeat(user.password.length) %></td>
                    <td class="center-text"><%= user.role %></td>
                    <td class="center-text">
                        <% if (user.status === 'active') { %>
                            <img src="./assets/green_dot.png" alt="Active" class="status-icon-active">
                        <% } else if (user.status === 'inactive') { %>
                            <img src="./assets/Basic_red_dot.png" alt="Inactive" class="status-icon-inactive">
                        <% } %>
                        <%= user.status %>
                    </td>
                    <td class="center-text">
                        <!--TASK: Make an Edit Function (Editable Are: Username, Password, Role, & Status)-->
                        <img src="./assets/edit_icon_pencil.png" alt="Edit" class="edit-icon" onclick="window.location.href='/register?username=<%= user.username %>'">
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

CSS:

.web-page .bottom-page-part .manage-accounts-header .table-area .users-table {
width: 80rem;
height: 20rem;
background-color: white;
flex-shrink: 0;
overflow: auto;
}

.center-text {
text-align: center;
}

/* Table header color */
.users-table table thead th {
background-color: #CDD6FF;
}

/* Table border color */
.users-table table, .users-table table th, .users-table table td {
border: 1px solid blue;
}

/* Alternating row colors */
.users-table table tbody tr:nth-child(odd) {
background-color: white;
}

.users-table table tbody tr:nth-child(even) {
background-color: #EFF7FF;
}

.status-icon-active {
height: 20px; 
width: 20px; 
margin-right: 5px;
}

.status-icon-inactive {
height: 20px; 
width: 20px; 
margin-left: 0.4rem;
}

/* Add a class for the edit icon */
.edit-icon {
height: 28px; /* Adjust as needed */
width: 28px; /* Adjust as needed */
cursor: pointer;
}