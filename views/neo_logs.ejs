<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Logs</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #F4F4F4;
            margin: 0;
            padding: 0;
        }
        .transaction-log-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            padding: 20px;
            width: 80%;
        }
        .transaction-log-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .transaction-log-header h1 {
            color: #333;
        }
        .dropdown {
            position: relative;
        }
        .dropbtn {
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            font-size: 16px;
            padding: 10px;
            margin-right: 30px;
        }
        .dropdown-content {
            background-color: #f9f9f9;
            border-radius: 5px;
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
            display: none;
            min-width: 160px;
            overflow: auto;
            position: absolute;
            right: 0;
            z-index: 1;
        }
        .dropdown-content a {
            border-bottom: 1px solid #ddd;
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }
        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }
        .show {display: block;}
        .log-entry {
            align-items: center;
            background-color: #f9f9f9;
            border-left: 5px solid #4CAF50; /* Default color for no filter */
            display: flex;
            margin: 10px 0;
            padding: 10px;
        }
        .log-entry:nth-child(even) {
            background-color: #e9e9e9;
        }
        .log-entry img {
            border-radius: 50%;
            margin-right: 15px;
            width: 50px; /* Adjust as necessary */
        }
        .log-details {
            flex-grow: 1;
        }
        .pagination {
            display: flex;
            justify-content: center;
            padding: 20px 0;
        }
        .pagination a {
            border: 1px solid #ddd;
            border-radius: 5px;
            color: #333;
            margin: 0 5px;
            padding: 10px 15px;
            text-decoration: none;
        }
        .pagination a.active {
            background-color: #4CAF50;
            color: white;
        }
        .pagination a:hover:not(.active) {
            background-color: #ddd;
        }
    </style>
</head>
<body>
    <div class="transaction-log-container">
        <div class="transaction-log-header">
            <h1>Transaction Logs</h1>
            <div class="dropdown">
                <button onclick="toggleDropdown()" class="dropbtn">Filter Transactions</button>
                <div id="myDropdown" class="dropdown-content">
                    <a href="?trans_type=Daily Transaction">Daily Transaction</a>
                    <a href="?trans_type=Modified">Modified</a>
                    <a href="?trans_type=Removed">Removed</a>
                    <a href="?trans_type=Added">Added</a>
                    <a href="?trans_type=Set Date">Set Date</a>
                </div>
            </div>
        </div>

        <% logs.forEach(function(log) { %>
        <div class="log-entry">
            <img src="<%= log.picture ? '/uploads/' + log.picture : 'default-image-path' %>" alt="User Image">
            <div class="log-details">
                <p><strong><%= log.material_name %></strong> - <%= log.description %></p>
                <p>Transaction by <%= log.username %></p>
                <!-- Added transaction date display -->
                <p>Date: <%= new Date(log.log_date).toLocaleDateString("en-US") %></p>
            </div>
            <span class="trans-type <%= log.trans_type.toLowerCase() %>"><%= log.trans_type %></span>
        </div>
        <% }); %>

        <div class="pagination">
            <% for(let i = 1; i <= totalPages; i++) { %>
                <a href="?page=<%= i %><%= transTypeFilter ? '&trans_type=' + transTypeFilter : '' %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
            <% } %>
        </div>
    </div>

    <script>
        function toggleDropdown() {
            document.getElementById("myDropdown").classList.toggle("show");
        }
        window.onclick = function(event) {
            if (!event.target.matches('.dropbtn')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }
    </script>
</body>
</html>
