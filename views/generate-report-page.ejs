<!DOCTYPE html>
<html>
<head>
  <!-- [existing head elements] -->
</head>
<body>
<div class="web-page">
  <div class="top-bar">
    <!-- [existing top bar elements] -->
  </div>
  <div class="bottom-page-part">
    <!-- <%- include('sidebar') %> -->
    <div class="below-top-bar">
      <div class="inner-frame">
        <p class="generate-report-title">Generate Report</p>
        <form action="/generate-report" method="post" id="reportForm">
          <div class="upper-inner">
            <!-- [existing upper inner elements] -->
            <div class="date-frame">
              <div class="date-text-area">
                <!-- [existing date text area elements] -->
              </div>
              <div class="textfield-areas">
                <input type="date" name="startDate" required> <!-- Input for the start date -->
                <input type="date" name="endDate" required>   <!-- Input for the end date -->
              </div>
            </div>
            <!-- Hidden input to determine the type of report to generate -->
            <input type="hidden" name="reportType" id="reportType" value="">
          </div>
          <p class="preview-final-report-text">Preview Final Report:</p>
          <!-- [existing preview area elements] -->
          <div class="set-date-buttons-area">
            <!-- Buttons to define the type of report -->
            <button type="button" class="generate-report-button" onclick="setReportTypeAndSubmit('pdf')">Generate PDF</button>
            <button type="button" class="generate-report-button" onclick="setReportTypeAndSubmit('csv')">Generate CSV</button>
          </div>
        </form>
      </div>
      <div class="right-corner-side">
        <!-- [existing right corner side elements] -->
      </div>
    </div>
  </div>
</div>
<script>
  // Function to set report type and submit the form
  function setReportTypeAndSubmit(type) {
    document.getElementById('reportType').value = type; // Set the report type based on the button clicked
    document.getElementById('reportForm').submit(); // Submit the form
  }
</script>
</body>
</html>
